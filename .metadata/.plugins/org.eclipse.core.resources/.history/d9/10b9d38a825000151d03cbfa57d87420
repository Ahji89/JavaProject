
public class Animal {
	String name;
	int weight;
	
	Animal(){
		name = "냥이";
		weight = 400;
		print();
	}
	
	Animal(String a, int b){
		name = a;
		weight = b;
		print();
	}
	
	Animal(Animal copy){
		name = copy.name;
		weight = copy.weight;
	}
	
	int add(int i){
		weight += i;
		return weight;
	}
	
	int sub(int i){
		if(i < weight)
			weight -= i;
		else
			weight = i - weight;
		
		return weight;
	}
	
	void print(){
		System.out.println("이름 : " + name + ", 몸무게 : " + weight + "kg");
	}
	
	void print(String ani){
		System.out.println("이 동물은 " + ani + "입니다.");
	}
	
	/*void print(String name, String ani){
		System.out.println();
	}*/
	
	String setName(String a){
		name = a;
		return name;
	}
	
	int setWeight(int b){
		weight = b;
		return weight;
	}
}